<Page
    x:Class="WaveformOverlaysPlus.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WaveformOverlaysPlus"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <!--<Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    </Grid>-->

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="28"/>
            <RowDefinition Height="76"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Top">

            <Button Name="btnFile" Content="File" Style="{StaticResource styleMenuButton}" >
                <Button.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Name="menuNew" Text="New" FontSize="{StaticResource myFontSize}" Click="menuNew_Click"/>
                        <MenuFlyoutItem Name="menuOpen" Text="Open" FontSize="{StaticResource myFontSize}" Click="menuOpen_Click"/>
                        <MenuFlyoutItem Name="menuSave" Text="Save" FontSize="{StaticResource myFontSize}" Click="menuSave_Click"/>
                        <MenuFlyoutSeparator/>
                        <MenuFlyoutItem Name="menuPrint" Text="Print" Click="PrintButtonClick" FontSize="{StaticResource myFontSize}"/>
                        <MenuFlyoutItem Name="menuShare" Text="Share" FontSize="{StaticResource myFontSize}" Click="menuShare_Click"/>
                        <MenuFlyoutSeparator/>
                        <MenuFlyoutItem Name="menuExit" Text="Exit" FontSize="{StaticResource myFontSize}" Click="menuExit_Click"/>
                    </MenuFlyout>
                </Button.Flyout>
            </Button>


            <Button Content="Edit" Style="{StaticResource styleMenuButton}">
                <Button.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Text="Copy" FontSize="{StaticResource myFontSize}"/>
                        <MenuFlyoutItem Text="Paste" FontSize="{StaticResource myFontSize}"/>
                    </MenuFlyout>
                </Button.Flyout>
            </Button>

            <Button Content="Help" Style="{StaticResource styleMenuButton}">
                <Button.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Text="Help" FontSize="{StaticResource myFontSize}"/>
                        <MenuFlyoutItem Text="Feedback" FontSize="{StaticResource myFontSize}"/>
                        <MenuFlyoutItem Text="Privacy policy" FontSize="{StaticResource myFontSize}"/>
                        <MenuFlyoutSeparator/>
                        <MenuFlyoutItem Text="About" FontSize="{StaticResource myFontSize}"/>
                    </MenuFlyout>
                </Button.Flyout>
            </Button>

            <Rectangle Margin="10,0" Width="1" Height="20" Fill="#FF909090"/>

            <Button Content="Re" FontSize="{StaticResource myFontSize}"/>
            <Button Content="Un" FontSize="{StaticResource myFontSize}"/>

        </StackPanel>

        <ScrollViewer Grid.Row="1" Background="#FFF0F0F0" BorderBrush="#FFD31212" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
            <StackPanel Orientation="Horizontal">

                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Over1" Style="{StaticResource styleToolButton}"/>
                        <Button Content="Over2" Style="{StaticResource styleToolButton}"/>
                    </StackPanel>
                    <TextBlock Height="27"/>
                    <TextBlock Text="Overlays" HorizontalAlignment="Center" FontSize="{StaticResource myFontSize}"/>
                </StackPanel>
                <Rectangle Width="1" Height="55" Margin="10,0" Fill="#FF909090"/>

                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Zoom" FontSize="{StaticResource myFontSize}"/>
                        <Button Content="Zoom" FontSize="{StaticResource myFontSize}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Crop" FontSize="{StaticResource myFontSize}"/>
                        <Button>
                            <Button.Content>
                                <TextBlock Name="tblockMove" FontFamily="Segoe MDL2 Assets" Text="&#xE785;"/>
                            </Button.Content>
                        </Button>
                    </StackPanel>
                    <TextBlock Text="Image" HorizontalAlignment="Center" FontSize="{StaticResource myFontSize}"/>
                </StackPanel>
                <Rectangle Width="1" Height="55" Margin="10,0" Fill="#FF909090"/>

            </StackPanel>
        </ScrollViewer>



        <Grid Name="gridForOverall" Grid.Row="2" >

            <Grid Name="gridMain" Grid.Row="2"/>

        </Grid>

        <Grid Grid.RowSpan="3" Name="gridContextDialog" Visibility="Collapsed" Background="#B2000000"/>

        <Grid Grid.RowSpan="3" Name="gridForPrint" Width="1050" Height="810">
            <Image Name="imageForPrint" Margin="10,0,0,0" />
        </Grid>

    </Grid>

</Page>
