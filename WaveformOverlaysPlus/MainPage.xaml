                                    <Polygon Name="polygonHzero" Points="0,0 14,10, 0,20" Fill="Black" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" Margin="0,0,1,0" ManipulationMode="TranslateY" ManipulationDelta="horizontal_ManipulationDelta" ManipulationStarting="rulers_ManipulationStarting" ManipulationCompleted="rulers_ManipulationCompleted" PointerEntered="HrulerGrips_PointerEntered" PointerExited="HrulerGrips_PointerExited" PointerPressed="HrulerGrips_PointerPressed" PointerReleased="HrulerGrips_PointerReleased" RightTapped="PolyRuler_RightTapped">
                                        <Polygon.RenderTransform>
                                            <CompositeTransform Rotation="180"/>
                                        </Polygon.RenderTransform>
                                    </Polygon>
                                    <TextBox TextChanged="tbox_TextChanged" Name="tboxHzero" Text="0" HorizontalAlignment="Left" VerticalAlignment="Center" Style="{StaticResource styleTextBoxRulers}" MinWidth="25" TextAlignment="Center" />
                                </StackPanel>
                            </Grid>
                            
                            <Grid Name="gridVrulerZero" HorizontalAlignment="Left" Margin="-15,0,0,-35" Width="32" ManipulationMode="TranslateX">
                                <Grid.RenderTransform>
                                    <CompositeTransform x:Name="transformVzero"/>
                                </Grid.RenderTransform>
                                <Line IsHitTestVisible="False" Name="lineVrulerZero" Stroke="Transparent" StrokeThickness="2" StrokeDashArray="10,5" HorizontalAlignment="Center" Y2="1"/>
