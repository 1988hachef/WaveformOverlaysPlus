                                        <Polygon.RenderTransform>
                                            <CompositeTransform Rotation="-90"/>
                                        </Polygon.RenderTransform>
                                    </Polygon>
                                    <TextBox TextChanged="tbox_TextChanged" Name="tboxVzero" Text="0" HorizontalAlignment="Center" Style="{StaticResource styleTextBoxRulers}" Margin="0,-2,0,0" MinWidth="25" TextAlignment="Center" />
                                </StackPanel>
                            </Grid>
                            
                            <Grid Name="gridVruler720" HorizontalAlignment="Right" Margin="0,0,-15,-35" Width="32" ManipulationMode="TranslateX" >
                                <Grid.RenderTransform>
                                    <CompositeTransform x:Name="transformV720"/>
                                </Grid.RenderTransform>
                                <Line IsHitTestVisible="False" Name="lineVruler720" Stroke="Transparent" StrokeThickness="2" StrokeDashArray="10,5" HorizontalAlignment="Center" Y2="1"/>
                                <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center">
                                    <Polygon Name="polygonV720" Points="0,0 14,10, 0,20" Fill="Black" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" Margin="0" ManipulationMode="TranslateX" ManipulationDelta="vertical_ManipulationDelta" ManipulationStarting="rulers_ManipulationStarting" ManipulationCompleted="rulers_ManipulationCompleted" PointerEntered="VrulerGrips_PointerEntered" PointerExited="VrulerGrips_PointerExited" PointerPressed="VrulerGrips_PointerPressed" PointerReleased="VrulerGrips_PointerReleased" RightTapped="PolyRuler_RightTapped">
                                        <Polygon.RenderTransform>
                                            <CompositeTransform Rotation="-90"/>
                                        </Polygon.RenderTransform>
                                    </Polygon>
                                    <TextBox TextChanged="tbox_TextChanged" Name="tboxVpos" Text="720" HorizontalAlignment="Center" Style="{StaticResource styleTextBoxRulers}" Margin="0,-2,0,0" Padding="1,1,2,0" MinWidth="25" TextAlignment="Center" />
                                </StackPanel>
                            </Grid>

