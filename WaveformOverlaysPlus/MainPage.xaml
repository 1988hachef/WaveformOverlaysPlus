<Page
    x:Class="WaveformOverlaysPlus.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WaveformOverlaysPlus"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:canvas="using:Microsoft.Graphics.Canvas.UI.Xaml"
    xmlns:local1="using:WaveformOverlaysPlus.Controls"
    mc:Ignorable="d" Loaded="Page_Loaded">

    <!--<Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    </Grid>-->

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Top">
            <StackPanel.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFF0F0F0" Offset="0"/>
                    <GradientStop Color="#FFA8A4A4" Offset="1"/>
                    <GradientStop Color="#FFF0F0F0" Offset="0.902"/>
                </LinearGradientBrush>
            </StackPanel.Background>

            <Button Name="btnFile" Content="File" Style="{StaticResource styleMenuButton}" Height="25" Padding="8,-2,8,0" >
                <Button.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Name="menuNew" Text="New" FontSize="{StaticResource myFontSize}" Click="menuNew_Click"/>
                        <MenuFlyoutItem Name="menuOpen" Text="Open" FontSize="{StaticResource myFontSize}" Click="menuOpen_Click"/>
                        <MenuFlyoutItem Name="menuSave" Text="Save" FontSize="{StaticResource myFontSize}" Click="menuSave_Click"/>
                        <MenuFlyoutSeparator/>
                        <MenuFlyoutItem Name="menuPrint" Text="Print" Click="PrintButtonClick" FontSize="{StaticResource myFontSize}"/>
                        <MenuFlyoutItem Name="menuShare" Text="Share" FontSize="{StaticResource myFontSize}" Click="menuShare_Click"/>
                        <MenuFlyoutSeparator/>
                        <MenuFlyoutItem Name="menuExit" Text="Exit" FontSize="{StaticResource myFontSize}" Click="menuExit_Click"/>
                    </MenuFlyout>
                </Button.Flyout>
            </Button>


            <Button Content="Edit" Style="{StaticResource styleMenuButton}" Height="25" Padding="8,-2,8,0" >
                <Button.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Name="menuCopy" Text="Copy" FontSize="{StaticResource myFontSize}" Click="menuCopy_Click"/>
                        <MenuFlyoutItem Name="menuPaste" Text="Paste" FontSize="{StaticResource myFontSize}" Click="menuPaste_Click"/>
                    </MenuFlyout>
                </Button.Flyout>
            </Button>

            <Button Content="Help" Style="{StaticResource styleMenuButton}" Height="25" Padding="8,-2,8,0">
                <Button.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Name="menuHelp" Text="Help" FontSize="{StaticResource myFontSize}"/>
                        <MenuFlyoutItem Name="menuFeedback" Text="Feedback" FontSize="{StaticResource myFontSize}" Visibility="Collapsed" Click="menuFeedback_Click"/>
                        <MenuFlyoutItem Name="menuPrivacyPolicy" Text="Privacy policy" FontSize="{StaticResource myFontSize}" Click="menuPrivacyPolicy_Click"/>
                        <MenuFlyoutSeparator/>
                        <MenuFlyoutItem Name="menuAbout" Text="About" FontSize="{StaticResource myFontSize}" Click="menuAbout_Click"/>
                    </MenuFlyout>
                </Button.Flyout>
            </Button>

            <Rectangle Margin="10,0" Width="1" Height="20" Fill="#FF909090"/>

            <Button Style="{StaticResource styleMenuButton}" FontFamily="Segoe MDL2 Assets" Content="&#xE7A7;" FontSize="14" Height="25" />
            <Button Style="{StaticResource styleMenuButton}" FontFamily="Segoe MDL2 Assets" Content="&#xE7A6;" FontSize="14" Height="25"/>

        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Padding="0,5,3,0" Margin="0" Width="102">
                <StackPanel.Background>
                    <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                        <GradientStop Color="#FFF0F0F0" Offset="0"/>
                        <GradientStop Color="#FFA8A4A4" Offset="1"/>
                        <GradientStop Color="#FFF0F0F0" Offset="0.948"/>
                    </LinearGradientBrush>
                </StackPanel.Background>

                <StackPanel Orientation="Horizontal">
                    <Button Style="{StaticResource styleMenuButton}" Width="38" Padding="0" Margin="8,0,0,0" Height="38">
                        <Button.Content>
                            <Image Source="/Assets/IconCompDivs.bmp" Height="30" Width="30"/>
                        </Button.Content>
                    </Button>
                    <Button Style="{StaticResource styleMenuButton}" Width="38" Padding="0" Margin="8,0,0,0" Height="38">
                        <Button.Content>
                            <Image Source="/Assets/IconCylinderIDOverlay.bmp" Width="30" Height="30"/>
                        </Button.Content>
                    </Button>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <Button Style="{StaticResource styleMenuButton}" Width="38" Padding="0" Margin="8,0,0,0" Height="38">
                        <Button.Content>
                            <Image Source="/Assets/IconValveOverlap.bmp" Width="30" Height="30"/>
                        </Button.Content>
                    </Button>
                </StackPanel>

                <Rectangle Fill="Gray" Height="1" Margin="8,5,10,5"/>

                <StackPanel Orientation="Horizontal">
                    <RadioButton GroupName="tools" Style="{StaticResource styleToolRadioButton}" FontFamily="Segoe MDL2 Assets" Content="&#xE7C9;" FontSize="20" Width="38" Height="38" HorizontalContentAlignment="Center" Margin="8,0,0,5" Checked="tool_Checked" Name="cursor" IsChecked="True"/>
                    <RadioButton GroupName="tools" Style="{StaticResource styleToolRadioButton}" FontFamily="Segoe MDL2 Assets" Content="&#xE123;" FontSize="20" Width="38" Height="38" HorizontalContentAlignment="Center" Margin="8,0,0,5" Checked="tool_Checked" Name="crop" Click="crop_Click"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <RadioButton GroupName="tools" Style="{StaticResource styleToolRadioButton}" FontFamily="Segoe MDL2 Assets" Content="&#xEE56;" FontSize="20" Width="38" Height="38" HorizontalContentAlignment="Center" Margin="8,0,0,5" Checked="tool_Checked" Name="pen" Click="PenOrEraser_Clicked"/>
                    <RadioButton GroupName="tools" Style="{StaticResource styleToolRadioButton}" FontFamily="Segoe MDL2 Assets" Content="&#xED60;" FontSize="20" Width="38" Height="38" HorizontalContentAlignment="Center" Margin="8,0,0,5" Checked="tool_Checked" Name="eraser" Click="PenOrEraser_Clicked"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <RadioButton GroupName="tools" Style="{StaticResource styleToolRadioButton}" FontFamily="Segoe MDL2 Assets" Content="&#xE8D2;" FontSize="20" Width="38" Height="38" HorizontalContentAlignment="Center" Margin="8,0,0,5" Checked="tool_Checked" Name="text" Click="text_Click"/>
                    <RadioButton GroupName="tools" Style="{StaticResource styleToolRadioButton}" FontFamily="Segoe MDL2 Assets" Content="&#xE8DB;" FontSize="20" Width="38" Height="38" HorizontalContentAlignment="Center" Margin="8,0,0,5" Checked="tool_Checked" Name="line" Click="ArrowOrLine_Clicked"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <RadioButton GroupName="tools" Style="{StaticResource styleToolRadioButton}" FontFamily="Segoe MDL2 Assets" Content="&#xE741;" FontSize="20" Width="38" Height="38" HorizontalContentAlignment="Center" Margin="8,0,0,5" Checked="tool_Checked" Name="arrow" Click="ArrowOrLine_Clicked"/>
                    <RadioButton GroupName="tools" Style="{StaticResource styleToolRadioButton}" FontFamily="Segoe MDL2 Assets" Content="&#xEA3A;" FontSize="20" Width="38" Height="38" HorizontalContentAlignment="Center" Margin="8,0,0,5" Checked="tool_Checked" Name="ellipse" Click="ellipse_Click"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <RadioButton GroupName="tools" Style="{StaticResource styleToolRadioButton}" FontFamily="Segoe MDL2 Assets" Content="&#xE739;" FontSize="20" Width="38" Height="38" HorizontalContentAlignment="Center" Margin="8,0,0,0" Checked="tool_Checked" Name="rectangle" Click="RectOrRoundRect_Clicked"/>
                    <RadioButton GroupName="tools" Style="{StaticResource styleToolRadioButton}" FontSize="20" Width="38" Height="38" HorizontalContentAlignment="Center" Margin="8,0,0,0" Checked="tool_Checked" Name="roundedRectangle" Click="RectOrRoundRect_Clicked">
                        <RadioButton.Content>
                            <Rectangle Stroke="Black" Width="20" Height="20" RadiusX="4" RadiusY="4"/>
                        </RadioButton.Content>
                    </RadioButton>
                </StackPanel>

                <Rectangle Fill="Gray" Height="1" Margin="8,5,10,5"/>

                <StackPanel Margin="0">

                    <RadioButton Tag="1" GroupName="sizes" Style="{StaticResource styleToolRadioButton}" Margin="5,0" Width="88"  Height="17" HorizontalAlignment="Center" Checked="sizes_Checked">
                        <RadioButton.Content>
                            <Rectangle Width="56" Height="1" Fill="Black"/>
                        </RadioButton.Content>
                    </RadioButton>

                    <RadioButton Tag="2" GroupName="sizes" Style="{StaticResource styleToolRadioButton}" Margin="5,0" Width="88"  Height="18" HorizontalAlignment="Center" Checked="sizes_Checked">
                        <RadioButton.Content>
                            <Rectangle Width="56" Height="2" Fill="Black"/>
                        </RadioButton.Content>
                    </RadioButton>

                    <RadioButton Tag="6" GroupName="sizes" Style="{StaticResource styleToolRadioButton}" Margin="5,0" Width="88"  Height="22" HorizontalAlignment="Center" Checked="sizes_Checked" IsChecked="True">
                        <RadioButton.Content>
                            <Rectangle Width="56" Height="6" Fill="Black"/>
                        </RadioButton.Content>
                    </RadioButton>

                    <RadioButton Tag="10" Name="rbSize10" GroupName="sizes" Style="{StaticResource styleToolRadioButton}" Margin="5,0" Width="88"  Height="26" HorizontalAlignment="Center" Checked="sizes_Checked">
                        <RadioButton.Content>
                            <Rectangle Width="56" Height="10" Fill="Black"/>
                        </RadioButton.Content>
                    </RadioButton>

                </StackPanel>

                <Rectangle Name="rectSeparator" Fill="Gray" Height="1" Margin="8,5,10,5"/>

                <RadioButton Name="strokeColorRB" Style="{StaticResource styleToolRadioButton}" HorizontalAlignment="Right" Margin="0,0,20,0" Width="65" Height="24" IsChecked="True" Checked="colorChanger_Checked">
                    <RadioButton.Content>
                        <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft">
                            <Border Name="borderForStrokeColor" Width="20" Height="20" Margin="0,0,5,0" BorderBrush="DimGray" Background="Black" BorderThickness="1">
                                <TextBlock Name="strokeX" Visibility="Collapsed" FontFamily="Segoe MDL2 Assets" Text="&#xE8BB;" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
                            </Border>
                            <TextBlock Text="Stroke:" FontSize="{StaticResource myFontSize}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </RadioButton.Content>
                </RadioButton>

                <RadioButton Name="fillColorRB" Style="{StaticResource styleToolRadioButton}" HorizontalAlignment="Right" Margin="0,0,20,0" Width="65" Height="24" Checked="colorChanger_Checked">
                    <RadioButton.Content>
                        <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft">
                            <Border Name="borderForFillColor" Width="20" Height="20" Margin="0,0,5,0" BorderBrush="DimGray" Background="Transparent" BorderThickness="1">
                                <TextBlock Name="fillX" FontFamily="Segoe MDL2 Assets" Text="&#xE8BB;" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
                            </Border>
                            <TextBlock Text="Fill:" FontSize="{StaticResource myFontSize}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </RadioButton.Content>
                </RadioButton>

                <RadioButton Name="textColorRB" Style="{StaticResource styleToolRadioButton}" HorizontalAlignment="Right" Margin="0,0,20,0" Width="65" Height="24" Checked="colorChanger_Checked">
                    <RadioButton.Content>
                        <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft">
                            <Border Name="borderForTextColor" Width="20" Height="20" Margin="0,0,5,0" BorderBrush="DimGray" Background="Black" BorderThickness="1">
                                <TextBlock Name="textX" Visibility="Collapsed" FontFamily="Segoe MDL2 Assets" Text="&#xE8BB;" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
                            </Border>
                            <TextBlock Text="Text:" FontSize="{StaticResource myFontSize}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </RadioButton.Content>
                </RadioButton>

                <RadioButton Name="pageColorRB" Style="{StaticResource styleToolRadioButton}" HorizontalAlignment="Right" Margin="0,0,20,0" Width="65" Height="24" Checked="colorChanger_Checked">
                    <RadioButton.Content>
                        <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft">
                            <Border Name="borderForPageColor" Width="20" Height="20" Margin="0,0,5,0" BorderBrush="DimGray" Background="White" BorderThickness="1"/>
                            <TextBlock Text="Page:" FontSize="{StaticResource myFontSize}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </RadioButton.Content>
                </RadioButton>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,2,0">
                    <Button Background="#FFFA2732" Style="{StaticResource styleColorButton}" Click="color_Click"/>
                    <Button Background="#FFC29A1F" Style="{StaticResource styleColorButton}" Click="color_Click"/>
                    <Button Background="#FF00A84F" Style="{StaticResource styleColorButton}" Click="color_Click"/>
                    <Button Background="Blue" Style="{StaticResource styleColorButton}" Click="color_Click"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,2,0">
                    <Button Background="Red" Style="{StaticResource styleColorButton}" Click="color_Click"/>
                    <Button Background="Yellow" Style="{StaticResource styleColorButton}" Click="color_Click"/>
                    <Button Background="Lime" Style="{StaticResource styleColorButton}" Click="color_Click"/>
                    <Button Background="Cyan" Style="{StaticResource styleColorButton}" Click="color_Click"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,2,0">
                    <Button Background="#FFFFAEC9" Style="{StaticResource styleColorButton}" Click="color_Click"/>
                    <Button Background="Orange" Style="{StaticResource styleColorButton}" Click="color_Click"/>
                    <Button Background="#FFB5E61D" Style="{StaticResource styleColorButton}" Click="color_Click"/>
                    <Button Background="#FF99D9EA" Style="{StaticResource styleColorButton}" Click="color_Click"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,2,0">
                    <Button Background="HotPink" Style="{StaticResource styleColorButton}" Click="color_Click"/>
                    <Button Background="#FFFF7F27" Style="{StaticResource styleColorButton}" Click="color_Click"/>
                    <Button Background="White" Style="{StaticResource styleColorButton}" Click="color_Click"/>
                    <Button Background="#FFC8BFE7" Style="{StaticResource styleColorButton}" Click="color_Click"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,2,0">
                    <Button Background="#FFA349A4" Style="{StaticResource styleColorButton}" Click="color_Click"/>
                    <Button Background="SaddleBrown" Style="{StaticResource styleColorButton}" Click="color_Click"/>
                    <Button Background="#FF7F7F7F" Style="{StaticResource styleColorButton}" Click="color_Click"/>
                    <Button Background="#FF00A2E8" Style="{StaticResource styleColorButton}" Click="color_Click"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,2,0">
                    <Button Name="btnTransparent" Background="Transparent" Style="{StaticResource styleColorButton}" Click="color_Click">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8BB;" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
                    </Button>
                    <Button Background="#FF880015" Style="{StaticResource styleColorButton}" Click="color_Click"/>
                    <Button Background="Black" Style="{StaticResource styleColorButton}" Click="color_Click"/>
                    <Button Background="#FF3F48CC" Style="{StaticResource styleColorButton}" Click="color_Click"/>
                </StackPanel>

            </StackPanel>

            <Grid Name="gridForOverall" Grid.Column="1" Background="#FFD7E0EE">

                <Grid Name="gridPinkDelta" Height="16" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,-25,40,0" Background="White">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" BorderBrush="Black" BorderThickness="1">
                        <Rectangle Width="7" Height="7" Stroke="Black" Fill="#FF00FF"/>
                    </Border>
                    <Border Grid.Column="1" BorderBrush="Black" BorderThickness="0,1,1,1">
                        <TextBlock  Name="tblockPink1" Text="888.8" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <Border Grid.Column="2" BorderBrush="Black" BorderThickness="0,1,1,1">
                        <TextBlock  Name="tblockPink2" Text="888.8" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <Border Grid.Column="3" BorderBrush="Black" BorderThickness="0,1,1,1">
                        <TextBlock  Name="tblockPinkDelta" Text="&#916; 888.8" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </Grid>

                <Grid Name="gridPurpleDelta" Height="16" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,-10,40,0" Background="White">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" BorderBrush="Black" BorderThickness="1">
                        <Rectangle Width="7" Height="7" Stroke="Black" Fill="#9D00FF"/>
                    </Border>
                    <Border Grid.Column="1" BorderBrush="Black" BorderThickness="0,1,1,1">
                        <TextBlock  Name="tblockPurple1" Text="888.8" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <Border Grid.Column="2" BorderBrush="Black" BorderThickness="0,1,1,1">
                        <TextBlock  Name="tblockPurple2" Text="888.8" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <Border Grid.Column="3" BorderBrush="Black" BorderThickness="0,1,1,1">
                        <TextBlock  Name="tblockPurpleDelta" Text="&#916; 888.8" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </Grid>

                <Grid Name="gridToContainOthers" Margin="50,15,20,40">

                    <Grid Name="gridMain" Background="{Binding Background, ElementName=borderForPageColor}">

                    </Grid>
                    <canvas:CanvasControl Draw="DrawCanvas" x:Name="DrawingCanvas" IsHitTestVisible="False"/>

                    <Grid Name="gridVline2" HorizontalAlignment="Right" ManipulationMode="TranslateX">
                        <Grid.RenderTransform>
                            <CompositeTransform x:Name="transformV2"/>
                        </Grid.RenderTransform>
                        <Line Visibility="Collapsed" Name="lineV2" Stroke="#FF00FF" Y2="{Binding ActualHeight, ElementName=gridMain, Mode=OneWay}" HorizontalAlignment="Center" StrokeDashArray="10"/>
                        <Rectangle Name="rectV2" Width="10" Height="10" HorizontalAlignment="Right" VerticalAlignment="Bottom" Fill="#FF00FF" Stroke="Black" ManipulationMode="TranslateX" ManipulationDelta="vertical_ManipulationDelta" ManipulationStarting="rulers_ManipulationStarting" ManipulationCompleted="rulers_ManipulationCompleted"/>
                    </Grid>
                    <Grid Name="gridVline1" HorizontalAlignment="Right" ManipulationMode="TranslateX">
                        <Grid.RenderTransform>
                            <CompositeTransform x:Name="transformV1"/>
                        </Grid.RenderTransform>
                        <Line Visibility="Collapsed" Name="lineV1" Stroke="#FF00FF" Y2="{Binding ActualHeight, ElementName=gridMain, Mode=OneWay}" HorizontalAlignment="Center" StrokeDashArray="10"/>
                        <Rectangle Name="rectV1" Width="10" Height="10" HorizontalAlignment="Right" VerticalAlignment="Bottom" Fill="#FF00FF" Stroke="Black" ManipulationMode="TranslateX" ManipulationDelta="vertical_ManipulationDelta" ManipulationStarting="rulers_ManipulationStarting" ManipulationCompleted="rulers_ManipulationCompleted"/>
                    </Grid>
                    <Grid Name="gridHline1" VerticalAlignment="Top" ManipulationMode="TranslateY">
                        <Grid.RenderTransform>
                            <CompositeTransform x:Name="transformH1"/>
                        </Grid.RenderTransform>
                        <Line Visibility="Collapsed" Name="lineH1" Stroke="#9D00FF" StrokeDashArray="10" VerticalAlignment="Center" X2="{Binding ActualWidth, ElementName=gridMain, Mode=OneWay}"/>
                        <Rectangle Name="rectH1" Width="10" Height="10" Fill="#9D00FF" Stroke="Black" HorizontalAlignment="Left" ManipulationMode="TranslateY" ManipulationDelta="horizontal_ManipulationDelta" ManipulationStarting="rulers_ManipulationStarting" ManipulationCompleted="rulers_ManipulationCompleted"/>
                    </Grid>
                    <Grid Name="gridHline2" VerticalAlignment="Top" ManipulationMode="TranslateY">
                        <Grid.RenderTransform>
                            <CompositeTransform x:Name="transformH2"/>
                        </Grid.RenderTransform>
                        <Line Visibility="Collapsed" Name="lineH2" Stroke="#9D00FF" StrokeDashArray="10" VerticalAlignment="Center" X2="{Binding ActualWidth, ElementName=gridMain, Mode=OneWay}"/>
                        <Rectangle Name="rectH2" Width="10" Height="10" Fill="#9D00FF" Stroke="Black" HorizontalAlignment="Left" ManipulationMode="TranslateY" ManipulationDelta="horizontal_ManipulationDelta" ManipulationStarting="rulers_ManipulationStarting" ManipulationCompleted="rulers_ManipulationCompleted"/>
                    </Grid>
                    
                    <Grid Name="gridHrulerVac" VerticalAlignment="Bottom" Margin="-46,0,0,-10" Visibility="Collapsed" ManipulationMode="TranslateY">
                        <Grid.RenderTransform>
                            <CompositeTransform x:Name="transformHvac"/>
                        </Grid.RenderTransform>
                        <Line Visibility="Collapsed" Name="lineHrulerVac" VerticalAlignment="Center" Stroke="Gray" StrokeThickness="2" StrokeDashArray="10,5" Margin="40,0,0,0" X2="{Binding ActualWidth, ElementName=gridMain, Mode=OneWay}"/>
                        <StackPanel Orientation="Horizontal" Width="47" HorizontalAlignment="Left" VerticalAlignment="Center" FlowDirection="RightToLeft">
                            <Polygon Name="polygonHvac" Points="0,0 14,10, 0,20" Fill="Black" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" Margin="0,0,1,0" ManipulationMode="TranslateY" ManipulationDelta="horizontal_ManipulationDelta" ManipulationStarting="rulers_ManipulationStarting" ManipulationCompleted="rulers_ManipulationCompleted">
                                <Polygon.RenderTransform>
                                    <CompositeTransform Rotation="180"/>
                                </Polygon.RenderTransform>
                            </Polygon>
                            <TextBox Text="-26" HorizontalAlignment="Left" VerticalAlignment="Center" Style="{StaticResource styleTextBoxRulers}" />
                        </StackPanel>
                    </Grid>
                    <Grid Name="gridHrulerPres" VerticalAlignment="Top" Margin="-46,-10,0,0" ManipulationMode="TranslateY">
                        <Grid.RenderTransform>
                            <CompositeTransform x:Name="transformHpres"/>
                        </Grid.RenderTransform>
                        <Line Visibility="Collapsed" Name="lineHrulerPres" VerticalAlignment="Center" Stroke="Gray" StrokeThickness="2" StrokeDashArray="10,5" Margin="40,0,0,0" X2="{Binding ActualWidth, ElementName=gridMain, Mode=OneWay}" />
                        <StackPanel Orientation="Horizontal" Width="47" HorizontalAlignment="Left" VerticalAlignment="Center" FlowDirection="RightToLeft">
                            <Polygon Name="polygonHpres" Points="0,0 14,10, 0,20" Fill="Black" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" Margin="0,0,1,0" ManipulationMode="TranslateY" ManipulationDelta="horizontal_ManipulationDelta" ManipulationStarting="rulers_ManipulationStarting" ManipulationCompleted="rulers_ManipulationCompleted">
                                <Polygon.RenderTransform>
                                    <CompositeTransform Rotation="180"/>
                                </Polygon.RenderTransform>
                            </Polygon>
                            <TextBox Text="100" HorizontalAlignment="Left" VerticalAlignment="Center" Style="{StaticResource styleTextBoxRulers}" />
                        </StackPanel>
                    </Grid>
                    <Grid Name="gridHrulerZero" VerticalAlignment="Bottom" Margin="-46,0,0,-10" ManipulationMode="TranslateY">
                        <Grid.RenderTransform>
                            <CompositeTransform x:Name="transformHzero"/>
                        </Grid.RenderTransform>
                        <Line Visibility="Collapsed" Name="lineHrulerZero" VerticalAlignment="Center" Stroke="Gray" StrokeThickness="2" StrokeDashArray="10,5" Margin="40,0,0,0" X2="{Binding ActualWidth, ElementName=gridMain, Mode=OneWay}"/>
                        <StackPanel Orientation="Horizontal" Width="47" HorizontalAlignment="Left" VerticalAlignment="Center" FlowDirection="RightToLeft">
                            <Polygon Name="polygonHzero" Points="0,0 14,10, 0,20" Fill="Black" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" Margin="0,0,1,0" ManipulationMode="TranslateY" ManipulationDelta="horizontal_ManipulationDelta" ManipulationStarting="rulers_ManipulationStarting" ManipulationCompleted="rulers_ManipulationCompleted" >
                                <Polygon.RenderTransform>
                                    <CompositeTransform Rotation="180"/>
                                </Polygon.RenderTransform>
                            </Polygon>
                            <TextBox Text="0" HorizontalAlignment="Left" VerticalAlignment="Center" Style="{StaticResource styleTextBoxRulers}" />
                        </StackPanel>
                    </Grid>
                    <Grid Name="gridVrulerZero" HorizontalAlignment="Left" Margin="-16,0,0,-35" Width="32" ManipulationMode="TranslateX">
                        <Grid.RenderTransform>
                            <CompositeTransform x:Name="transformVzero"/>
                        </Grid.RenderTransform>
                        <Line Visibility="Collapsed" Name="lineVrulerZero" Stroke="Gray" StrokeThickness="2" StrokeDashArray="10,5" HorizontalAlignment="Center" Y2="{Binding ActualHeight, ElementName=gridMain, Mode=OneWay}"/>
                        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center">
                            <Polygon Name="polygonVzero" Points="0,0 14,10, 0,20" Fill="Black" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" Margin="0" ManipulationMode="TranslateX" ManipulationDelta="vertical_ManipulationDelta" ManipulationStarting="rulers_ManipulationStarting" ManipulationCompleted="rulers_ManipulationCompleted">
                                <Polygon.RenderTransform>
                                    <CompositeTransform Rotation="-90"/>
                                </Polygon.RenderTransform>
                            </Polygon>
                            <TextBox Text="0" HorizontalAlignment="Center" Style="{StaticResource styleTextBoxRulers}" Margin="0,-2,0,0" />
                        </StackPanel>
                    </Grid>
                    <Grid Name="gridVruler720" HorizontalAlignment="Right" Margin="0,0,-16,-35" Width="32" ManipulationMode="TranslateX">
                        <Grid.RenderTransform>
                            <CompositeTransform x:Name="transformV720"/>
                        </Grid.RenderTransform>
                        <Line Visibility="Collapsed" Name="lineVruler720" Stroke="Gray" StrokeThickness="2" StrokeDashArray="10,5" HorizontalAlignment="Center" Y2="{Binding ActualHeight, ElementName=gridMain, Mode=OneWay}"/>
                        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center">
                            <Polygon Name="polygonV720" Points="0,0 14,10, 0,20" Fill="Black" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" Margin="0" ManipulationMode="TranslateX" ManipulationDelta="vertical_ManipulationDelta" ManipulationStarting="rulers_ManipulationStarting" ManipulationCompleted="rulers_ManipulationCompleted">
                                <Polygon.RenderTransform>
                                    <CompositeTransform Rotation="-90"/>
                                </Polygon.RenderTransform>
                            </Polygon>
                            <TextBox Text="720" HorizontalAlignment="Center" Style="{StaticResource styleTextBoxRulers}" Margin="0,-2,0,0" />
                        </StackPanel>
                    </Grid>

                    <Grid Name="gridForOtherInput" Background="Transparent" Visibility="Collapsed" PointerPressed="gridForOtherInput_PointerPressed" PointerReleased="gridForOtherInput_PointerReleased"/>
                    <InkCanvas x:Name="inkCanvas" Visibility="Collapsed"/>

                </Grid>
            </Grid>

        </Grid>

