                                        </FlyoutBase.AttachedFlyout>
                                    </Polygon>
                                    <TextBox Name="tboxHpos" Text="100" HorizontalAlignment="Left" VerticalAlignment="Center" Style="{StaticResource styleTextBoxRulers}" TextChanged="tbox_TextChanged" MinWidth="25" TextAlignment="Center" />
                                </StackPanel>
                            </Grid>
                            
                            <Grid Name="gridHrulerZero" VerticalAlignment="Bottom" Margin="-48,0,0,-10" ManipulationMode="TranslateY">
                                <Grid.RenderTransform>
                                    <CompositeTransform x:Name="transformHzero"/>
                                </Grid.RenderTransform>
                                <Line IsHitTestVisible="False" Name="lineHrulerZero" VerticalAlignment="Center" Stroke="Transparent" StrokeThickness="2" StrokeDashArray="10,5" Margin="40,0,0,0" X2="1"/>
