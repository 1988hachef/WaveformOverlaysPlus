                            <Grid Name="gridExhOverlap" Visibility="Collapsed" Height="270" VerticalAlignment="Bottom" ManipulationMode="TranslateX, TranslateY" HorizontalAlignment="Left" SizeChanged="gridExhOverlap_SizeChanged" RightTapped="General_RightTapped">
                                <Grid.RenderTransform>
                                    <CompositeTransform x:Name="transformExh"/>
                                </Grid.RenderTransform>

                                <Rectangle Name="rectEVO" Fill="Red" HorizontalAlignment="Left" Width="1" />
                                <Rectangle Name="rectEVC" Fill="Red" HorizontalAlignment="Right" Width="1" />

                                <StackPanel Name="spEVO" Orientation="Horizontal" Background="Red" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-23,0,0,0" ManipulationMode="TranslateX, TranslateY" ManipulationDelta="spEVO_ManipulationDelta" ManipulationStarting="OverlapManip_Starting" ManipulationCompleted="OverlapManip_Completed" PointerEntered="ValveOverlapText_PointerEntered" PointerExited="ValveOverlapText_PointerExited" >
