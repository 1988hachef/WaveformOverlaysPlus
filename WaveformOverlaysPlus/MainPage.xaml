                                <Rectangle Grid.ColumnSpan="1" Grid.RowSpan="1"  Grid.Column="8"  Fill="{Binding Background, ElementName=borderForCompLinesColor}" Grid.Row="3"/>
                                <Rectangle Grid.ColumnSpan="1" Grid.RowSpan="1"  Grid.Column="10" Fill="{Binding Background, ElementName=borderForCompLinesColor}" Grid.Row="3"/>
                                <Rectangle Grid.ColumnSpan="1" Grid.RowSpan="5"  Grid.Column="12" Fill="{Binding Background, ElementName=borderForCompLinesColor}" />
                                <Rectangle Grid.ColumnSpan="1" Grid.RowSpan="1"  Grid.Column="14" Fill="{Binding Background, ElementName=borderForCompLinesColor}" Grid.Row="3"/>
                                <Rectangle Grid.ColumnSpan="1" Grid.RowSpan="1"  Grid.Column="16" Fill="{Binding Background, ElementName=borderForCompLinesColor}" Grid.Row="3"/>
