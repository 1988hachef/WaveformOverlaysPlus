<Page
    x:Class="WaveformOverlaysPlus.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WaveformOverlaysPlus"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <!--<Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    </Grid>-->

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Top">
            <StackPanel.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFF0F0F0" Offset="0"/>
                    <GradientStop Color="#FFA8A4A4" Offset="1"/>
                    <GradientStop Color="#FFF0F0F0" Offset="0.902"/>
                </LinearGradientBrush>
            </StackPanel.Background>

            <Button Name="btnFile" Content="File" Style="{StaticResource styleMenuButton}" >
                <Button.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Name="menuNew" Text="New" FontSize="{StaticResource myFontSize}" Click="menuNew_Click"/>
                        <MenuFlyoutItem Name="menuOpen" Text="Open" FontSize="{StaticResource myFontSize}" Click="menuOpen_Click"/>
                        <MenuFlyoutItem Name="menuSave" Text="Save" FontSize="{StaticResource myFontSize}" Click="menuSave_Click"/>
                        <MenuFlyoutSeparator/>
                        <MenuFlyoutItem Name="menuPrint" Text="Print" Click="PrintButtonClick" FontSize="{StaticResource myFontSize}"/>
                        <MenuFlyoutItem Name="menuShare" Text="Share" FontSize="{StaticResource myFontSize}" Click="menuShare_Click"/>
                        <MenuFlyoutSeparator/>
                        <MenuFlyoutItem Name="menuExit" Text="Exit" FontSize="{StaticResource myFontSize}" Click="menuExit_Click"/>
                    </MenuFlyout>
                </Button.Flyout>
            </Button>


            <Button Content="Edit" Style="{StaticResource styleMenuButton}">
                <Button.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Name="menuCopy" Text="Copy" FontSize="{StaticResource myFontSize}" Click="menuCopy_Click"/>
                        <MenuFlyoutItem Name="menuPaste" Text="Paste" FontSize="{StaticResource myFontSize}" Click="menuPaste_Click"/>
                    </MenuFlyout>
                </Button.Flyout>
            </Button>

            <Button Content="Help" Style="{StaticResource styleMenuButton}">
                <Button.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Text="Help" FontSize="{StaticResource myFontSize}"/>
                        <MenuFlyoutItem Text="Feedback" FontSize="{StaticResource myFontSize}"/>
                        <MenuFlyoutItem Text="Privacy policy" FontSize="{StaticResource myFontSize}"/>
                        <MenuFlyoutSeparator/>
                        <MenuFlyoutItem Text="About" FontSize="{StaticResource myFontSize}"/>
                    </MenuFlyout>
                </Button.Flyout>
            </Button>

            <Rectangle Margin="10,0" Width="1" Height="20" Fill="#FF909090"/>

            <Button Content="Re" FontSize="{StaticResource myFontSize}"/>
            <Button Content="Un" FontSize="{StaticResource myFontSize}"/>

        </StackPanel>





        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <StackPanel.Background>
                    <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                        <GradientStop Color="#FFF0F0F0" Offset="0"/>
                        <GradientStop Color="#FFA8A4A4" Offset="1"/>
                        <GradientStop Color="#FFF0F0F0" Offset="0.948"/>
                    </LinearGradientBrush>
                </StackPanel.Background>

                <StackPanel Orientation="Horizontal">
                    <Button Content="A" Style="{StaticResource styleToolButton}"/>
                    <Button Content="A" Style="{StaticResource styleToolButton}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Button Content="A" Style="{StaticResource styleToolButton}"/>
                    <Button Content="A" Style="{StaticResource styleToolButton}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Button Content="A" Style="{StaticResource styleToolButton}"/>
                    <Button Content="A" Style="{StaticResource styleToolButton}"/>
                </StackPanel>
            </StackPanel>

            <Grid Name="gridForOverall" Grid.Column="1" Background="#FF666666">

                <Grid Name="gridMain" Background="White" Margin="20,5,5,20">

                </Grid>

            </Grid>

        </Grid>

        <StackPanel Grid.Row="2">
            <StackPanel.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFF0F0F0" Offset="1"/>
                    <GradientStop Color="#FFA8A4A4"/>
                    <GradientStop Color="#FFF0F0F0" Offset="0.108"/>
                </LinearGradientBrush>
            </StackPanel.Background>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Button"/>
            </StackPanel>

        </StackPanel>

        <Grid Grid.RowSpan="3" Name="gridContextDialog" Visibility="Collapsed" Background="#B2000000"/>

        <Grid Grid.RowSpan="3" Name="gridForPrint" Width="1050" Height="810" Visibility="Collapsed">
            <Image Name="imageForPrint" Margin="10,0,0,0" />
        </Grid>

    </Grid>

</Page>
