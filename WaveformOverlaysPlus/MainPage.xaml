                                    <ColumnDefinition Width="2"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition Height="15"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="75"/>
                                    <RowDefinition Height="25"/>
                                </Grid.RowDefinitions>

                                <Rectangle Grid.ColumnSpan="1" Grid.RowSpan="5"  Grid.Column="0"  Fill="{Binding Background, ElementName=borderForCompLinesColor}" Name="rectZeroDegrees"/>
                                <Rectangle Grid.ColumnSpan="1" Grid.RowSpan="1"  Grid.Column="2"  Fill="{Binding Background, ElementName=borderForCompLinesColor}" Grid.Row="3"/>
