                                    <TextBlock Name="tblockEVO" Text="&#186; BBC" FontSize="12" Foreground="White" Padding="0,0,1,0"/>
                                </StackPanel>

                                <StackPanel Name="spEVC" Orientation="Horizontal" Background="Red" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,-23,0" ManipulationMode="TranslateX, TranslateY" ManipulationDelta="spEVC_ManipulationDelta" ManipulationStarting="OverlapManip_Starting" ManipulationCompleted="OverlapManip_Completed" PointerEntered="ValveOverlapText_PointerEntered" PointerExited="ValveOverlapText_PointerExited">
