                                <Rectangle Grid.ColumnSpan="1" Grid.RowSpan="5"  Grid.Column="48" Fill="{Binding Background, ElementName=borderForCompLinesColor}" />

                                <Rectangle Grid.ColumnSpan="13" Grid.RowSpan="1"  Grid.Column="0" Fill="Gray" Grid.Row="4" Stroke="Black"/>
                                <Rectangle Grid.ColumnSpan="13" Grid.RowSpan="1"  Grid.Column="12" Fill="Gray" Grid.Row="4" Stroke="Black"/>
                                <Rectangle Grid.ColumnSpan="13" Grid.RowSpan="1"  Grid.Column="24" Fill="Gray" Grid.Row="4" Stroke="Black"/>
                                <Rectangle Grid.ColumnSpan="13" Grid.RowSpan="1"  Grid.Column="36" Fill="Gray" Grid.Row="4" Stroke="Black"/>

                                <TextBlock Name="tblockExp" Grid.Column="0" Grid.ColumnSpan="13" HorizontalAlignment="Center" Grid.Row="4" TextWrapping="Wrap" Text="Expansion" VerticalAlignment="Center" FontWeight="Bold" FontSize="12"/>
                                <TextBlock Name="tblockExh" Grid.Column="12" Grid.ColumnSpan="13" HorizontalAlignment="Center" Grid.Row="4" TextWrapping="Wrap" Text="Exhaust" VerticalAlignment="Center" FontWeight="Bold" FontSize="12"/>
