<Page
    x:Class="WaveformOverlaysPlus.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WaveformOverlaysPlus"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <!--<Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    </Grid>-->

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Top">
            <StackPanel.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFF0F0F0" Offset="0"/>
                    <GradientStop Color="#FFA8A4A4" Offset="1"/>
                    <GradientStop Color="#FFF0F0F0" Offset="0.902"/>
                </LinearGradientBrush>
            </StackPanel.Background>

            <Button Name="btnFile" Content="File" Style="{StaticResource styleMenuButton}" >
                <Button.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Name="menuNew" Text="New" FontSize="{StaticResource myFontSize}" Click="menuNew_Click"/>
                        <MenuFlyoutItem Name="menuOpen" Text="Open" FontSize="{StaticResource myFontSize}" Click="menuOpen_Click"/>
                        <MenuFlyoutItem Name="menuSave" Text="Save" FontSize="{StaticResource myFontSize}" Click="menuSave_Click"/>
                        <MenuFlyoutSeparator/>
                        <MenuFlyoutItem Name="menuPrint" Text="Print" Click="PrintButtonClick" FontSize="{StaticResource myFontSize}"/>
                        <MenuFlyoutItem Name="menuShare" Text="Share" FontSize="{StaticResource myFontSize}" Click="menuShare_Click"/>
                        <MenuFlyoutSeparator/>
                        <MenuFlyoutItem Name="menuExit" Text="Exit" FontSize="{StaticResource myFontSize}" Click="menuExit_Click"/>
                    </MenuFlyout>
                </Button.Flyout>
            </Button>


            <Button Content="Edit" Style="{StaticResource styleMenuButton}">
                <Button.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Name="menuCopy" Text="Copy" FontSize="{StaticResource myFontSize}" Click="menuCopy_Click"/>
                        <MenuFlyoutItem Name="menuPaste" Text="Paste" FontSize="{StaticResource myFontSize}" Click="menuPaste_Click"/>
                    </MenuFlyout>
                </Button.Flyout>
            </Button>

            <Button Content="Help" Style="{StaticResource styleMenuButton}">
                <Button.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Name="menuHelp" Text="Help" FontSize="{StaticResource myFontSize}"/>
                        <MenuFlyoutItem Name="menuFeedback" Text="Feedback" FontSize="{StaticResource myFontSize}" Visibility="Collapsed" Click="menuFeedback_Click"/>
                        <MenuFlyoutItem Name="menuPrivacyPolicy" Text="Privacy policy" FontSize="{StaticResource myFontSize}" Click="menuPrivacyPolicy_Click"/>
                        <MenuFlyoutSeparator/>
                        <MenuFlyoutItem Name="menuAbout" Text="About" FontSize="{StaticResource myFontSize}" Click="menuAbout_Click"/>
                    </MenuFlyout>
                </Button.Flyout>
            </Button>

            <Rectangle Margin="10,0" Width="1" Height="20" Fill="#FF909090"/>

            <Button Style="{StaticResource styleMenuButton}" FontFamily="Segoe MDL2 Assets" Content="&#xE7A7;" FontSize="16"/>
            <Button Style="{StaticResource styleMenuButton}" FontFamily="Segoe MDL2 Assets" Content="&#xE7A6;" FontSize="16"/>

        </StackPanel>





        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Padding="0,0,3,0">
                <StackPanel.Background>
                    <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                        <GradientStop Color="#FFF0F0F0" Offset="0"/>
                        <GradientStop Color="#FFA8A4A4" Offset="1"/>
                        <GradientStop Color="#FFF0F0F0" Offset="0.948"/>
                    </LinearGradientBrush>
                </StackPanel.Background>

                <StackPanel Orientation="Horizontal">
                    <Button Style="{StaticResource styleToolButton}" FontFamily="Segoe MDL2 Assets" Content="&#xE7C9;" FontSize="20"/>
                    <Button Style="{StaticResource styleToolButton}" FontFamily="Segoe MDL2 Assets" Content="&#xE123;" FontSize="20"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Button Style="{StaticResource styleToolButton}" FontFamily="Segoe MDL2 Assets" Content="&#xEE56;" FontSize="20"/>
                    <Button Style="{StaticResource styleToolButton}" FontFamily="Segoe MDL2 Assets" Content="&#xED60;" FontSize="20"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Button Style="{StaticResource styleToolButton}" FontFamily="Segoe MDL2 Assets" Content="&#xE8D2;" FontSize="20"/>
                    <Button Style="{StaticResource styleToolButton}" FontFamily="Segoe MDL2 Assets" Content="&#xE8DB;" FontSize="20"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Button Style="{StaticResource styleToolButton}" FontFamily="Segoe MDL2 Assets" Content="&#xE741;" FontSize="20"/>
                    <Button Style="{StaticResource styleToolButton}" FontFamily="Segoe MDL2 Assets" Content="&#xEA3A;" FontSize="20"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Button Style="{StaticResource styleToolButton}" FontFamily="Segoe MDL2 Assets" Content="&#xE739;" FontSize="20"/>
                    <Button Style="{StaticResource styleToolButton}">
                        <Button.Content>
                            <Rectangle Stroke="Black" Width="20" Height="20" RadiusX="4" RadiusY="4"/>
                        </Button.Content>
                    </Button>
                </StackPanel>

                <Rectangle Fill="Gray" Height="1" Margin="8,5,10,5"/>

                <StackPanel Margin="0,5">
                    <Button Name="btnSize1" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" Style="{StaticResource styleToolButton}" Padding="15,0" Margin="5,0"  Height="11">
                        <Button.Content>
                            <Rectangle Height="1" Fill="Black"/>
                        </Button.Content>
                    </Button>
                    
                    <Button Name="btnSize2" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" Style="{StaticResource styleToolButton}" Padding="15,0" Margin="5,0"  Height="12">
                        <Button.Content>
                            <Rectangle Height="2" Fill="Black"/>
                        </Button.Content>
                    </Button>
                    
                    <Button Name="btnSize6" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" Style="{StaticResource styleToolButton}" Padding="15,0" Margin="5,0"  Height="16">
                        <Button.Content>
                            <Rectangle Height="6" Fill="Black"/>
                        </Button.Content>
                    </Button>
                    
                    <Button Name="btnSize10" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" Style="{StaticResource styleToolButton}" Padding="15,0" Margin="5,0"  Height="20">
                        <Button.Content>
                            <Rectangle Height="10" Fill="Black"/>
                        </Button.Content>
                    </Button>
                    
                </StackPanel>

                <Rectangle Fill="Gray" Height="1" Margin="8,5,10,5"/>

                <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft" HorizontalAlignment="Right" Margin="0,7,25,0">
                    <Button Background="Black" Style="{StaticResource styleColorButton}" Margin="2,2,5,2"/>
                    <TextBlock Text="Stroke:" FontSize="{StaticResource myFontSize}" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft" HorizontalAlignment="Right" Margin="0,0,25,0">
                    <Button Background="Transparent" Style="{StaticResource styleColorButton}" Margin="2,2,5,2">
                        <TextBlock Text="x" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0" Padding="0,0,0,5.5"/>
                    </Button>
                    <TextBlock Text="Fill:" FontSize="{StaticResource myFontSize}" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft" HorizontalAlignment="Right" Margin="0,0,25,0">
                    <Button Background="Black" Style="{StaticResource styleColorButton}" Margin="2,2,5,2"/>
                    <TextBlock Text="Text:" FontSize="{StaticResource myFontSize}" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft" HorizontalAlignment="Right" Margin="0,0,25,0">
                    <Button Background="White" Style="{StaticResource styleColorButton}" Margin="2,2,5,2"/>
                    <TextBlock Text="Page:" FontSize="{StaticResource myFontSize}" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,2,0">
                    <Button Background="#FFFA2732" Style="{StaticResource styleColorButton}"/>
                    <Button Background="#FFC29A1F" Style="{StaticResource styleColorButton}"/>
                    <Button Background="#FF00A84F" Style="{StaticResource styleColorButton}"/>
                    <Button Background="Blue" Style="{StaticResource styleColorButton}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,2,0">
                    <Button Background="Red" Style="{StaticResource styleColorButton}"/>
                    <Button Background="Yellow" Style="{StaticResource styleColorButton}"/>
                    <Button Background="Lime" Style="{StaticResource styleColorButton}"/>
                    <Button Background="Cyan" Style="{StaticResource styleColorButton}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,2,0">
                    <Button Background="#FFFFAEC9" Style="{StaticResource styleColorButton}"/>
                    <Button Background="Orange" Style="{StaticResource styleColorButton}"/>
                    <Button Background="#FFB5E61D" Style="{StaticResource styleColorButton}"/>
                    <Button Background="#FF99D9EA" Style="{StaticResource styleColorButton}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,2,0">
                    <Button Background="HotPink" Style="{StaticResource styleColorButton}" />
                    <Button Background="#FFFF7F27" Style="{StaticResource styleColorButton}" />
                    <Button Background="White" Style="{StaticResource styleColorButton}" />
                    <Button Background="#FFC8BFE7" Style="{StaticResource styleColorButton}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,2,0">
                    <Button Background="#FFA349A4" Style="{StaticResource styleColorButton}"/>
                    <Button Background="SaddleBrown" Style="{StaticResource styleColorButton}" />
                    <Button Background="#FF7F7F7F" Style="{StaticResource styleColorButton}" />
                    <Button Background="#FF00A2E8" Style="{StaticResource styleColorButton}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,2,0">
                    <Button Background="Transparent" Style="{StaticResource styleColorButton}" >
                        <TextBlock Text="x" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0" Padding="0,0,0,5.5"/>
                    </Button>
                    <Button Background="#FF880015" Style="{StaticResource styleColorButton}" />
                    <Button Background="Black" Style="{StaticResource styleColorButton}" />
                    <Button Background="#FF3F48CC" Style="{StaticResource styleColorButton}" />
                </StackPanel>
                
            </StackPanel>

            <Grid Name="gridForOverall" Grid.Column="1" Background="#FFD7E0EE">

                <Grid Name="gridMain" Background="White" Margin="20,5,5,20">
                    
                </Grid>

            </Grid>

        </Grid>

        <StackPanel Grid.Row="2">
            <StackPanel.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFF0F0F0" Offset="1"/>
                    <GradientStop Color="#FFA8A4A4"/>
                    <GradientStop Color="#FFF0F0F0" Offset="0.108"/>
                </LinearGradientBrush>
            </StackPanel.Background>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Background="#FFE8EFF7" BorderBrush="#FFA4CEF9">
                    <Button.Content>
                        <Image Source="/Assets/IconCompressionOverlay.bmp" Width="32" Height="32"/>
                    </Button.Content>
                </Button>
                <Button Content="Valve timing" Background="#FFC9E0F7" BorderBrush="#FF62A2E4"/>
                <Button BorderBrush="#FFE2E3E4" Background="#FFF5F6F7">
                    <Button.Content>
                        <Image Source="/Assets/IconCylinderIDOverlay.bmp"/>
                    </Button.Content>
                </Button>
            </StackPanel>

        </StackPanel>

        <Grid Name="gridCover" Visibility="Collapsed" Grid.RowSpan="3" Background="#B2000000">
            <Grid Name="gridDialog" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center" Background="White" Margin="30">
                <StackPanel>
                    <StackPanel Name="spanelText" Margin="20"/>
                    <Button Name="btnDialogOK" Visibility="Collapsed" Content="OK" Margin="20,0,20,20" Click="btnDialogOK_Click"/>
                    <Button Name="btnDialogCancel" Visibility="Collapsed" Content="Cancel" Margin="20,0,20,20"/>
                </StackPanel>
            </Grid>
        </Grid>

        <Grid Grid.RowSpan="3" Name="gridForPrint" Width="1050" Height="810" Visibility="Collapsed">
            <Image Name="imageForPrint" Margin="10,0,0,0" />
        </Grid>

    </Grid>

</Page>
