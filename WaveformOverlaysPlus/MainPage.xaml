                                <Rectangle Grid.ColumnSpan="1" Grid.RowSpan="1"  Grid.Column="22" Fill="{Binding Background, ElementName=borderForCompLinesColor}" Grid.Row="3"/>
                                <Rectangle Grid.ColumnSpan="1" Grid.RowSpan="5"  Grid.Column="24" Fill="{Binding Background, ElementName=borderForCompLinesColor}" />
                                <Rectangle Grid.ColumnSpan="1" Grid.RowSpan="1"  Grid.Column="26" Fill="{Binding Background, ElementName=borderForCompLinesColor}" Grid.Row="3"/>
