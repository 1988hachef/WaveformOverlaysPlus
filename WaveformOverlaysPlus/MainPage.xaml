                                    <TextBlock Name="tblockEVC" Text="&#186; ATC" FontSize="12" Foreground="White" Padding="0,0,1,0"/>
                                </StackPanel>

                                <Rectangle Name="rectRed" Fill="Red" Opacity="0.2" Margin="0,30,0,0"/>
                            </Grid>

                            <Grid Name="gridIntOverlap" Visibility="Collapsed" Height="220" VerticalAlignment="Bottom" HorizontalAlignment="Left" ManipulationMode="TranslateX, TranslateY" SizeChanged="gridIntOverlap_SizeChanged" RightTapped="General_RightTapped">
                                <Grid.RenderTransform>
                                    <CompositeTransform x:Name="transformInt"/>
